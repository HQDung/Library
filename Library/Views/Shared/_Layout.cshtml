<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/layout.css")
    @Styles.Render("~/Content/styles.css")
    @Styles.Render("~/Content/QLDGstyles.css")
    @Scripts.Render("~/Scripts/jquery-1.8.2.min.js")
    @Scripts.Render("~/Scripts/jquery.cycle.all.js")
    <script>
        function loginshow() {
            if (document.getElementById("login").className == "visible") {
                document.getElementById("login").className = "hidden";
                $(".loginform").css({ "width": "8%" });
                $(".right").css({ "width": "10%", "right": "5%" });
                
                return;
            }
            else  {
                document.getElementById("login").className = "visible";
                $(".loginform").css({ "width": "25%" });
                $(".right").css({ "width": "100%", "right": "0px" });
                setTimeout(function () {
                    if (document.getElementById("login").className == "visible") {
                        document.getElementById("login").className = "hidden";
                        $(".loginform").css({ "width": "8%" });
                        $(".right").css({ "width": "10%", "right": "5%" });
                    }
                }, 15000);
                return;
            }
        }
    </script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/script.js")" ></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Chart.js")"></script>
</head>
<body>
    <div class="left"></div>
    <div class="main">
        <div class="top">
            <a name="Đầu-trang"></a>
            <div class="topcontent">
                <div class="banner">
                </div>
                <div class="topmenu">
                    <div id='cssmenu'>
                        <ul>
                            <li><a href='#'><span>Home</span></a></li>
                            <li class='active has-sub'><a href='#'><span>Products</span></a>
                                <ul>
                                    <li class='has-sub'><a href='#'><span>Product 1</span></a>
                                        <ul>
                                            <li><a href='#'><span>Sub Product</span></a></li>
                                            <li class='last'><a href='#'><span>Sub Product</span></a></li>
                                        </ul>
                                    </li>
                                    <li class='has-sub'><a href='#'><span>Product 2</span></a>
                                        <ul>
                                            <li><a href='#'><span>Sub Product</span></a></li>
                                            <li class='last'><a href='#'><span>Sub Product</span></a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                            <li><a href='#'><span>About</span></a></li>
                            <li class='last'><a href='#'><span>Contact</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="content">
            @RenderBody()
        </div>
        <div class="footer">
            <div class="footercontent">
                <a href="#Đầu-trang">Về đầu trang</a>
            </div>
        </div>
    </div>
    <div class="right">
        <div class="loginform">
            <div id="loginicon" class="visible">
                @*<input type="button"  />*@
                <img src="~/Content/image/loginicon.png" style="width:100%;height:100%" onclick="loginshow();"/>
            </div>
            <div id="login" class="hidden">
                <table>
                    <form>
                        <tr>
                            <td colspan="2"><input type="text" name="username" placeholder="Username" /></td>
                        </tr>
                        <tr>
                            <td colspan="2"><input type="password" name="pasword" placeholder="Password" /></td>
                        </tr>
                        <tr>
                            <td style="font-size: 13px!important; display:inline;"><input type="checkbox" name="cbRemember" />Lưu tài khoản</td>
                            <td><span .class="pull-right"><a href="">Quên mật khẩu</a></span></td>
                        </tr>
                        <tr>
                            <td colspan="2"><input type="submit" name="pasword" value="Log In"/></td>
                        </tr>
                    </form>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
</html>
